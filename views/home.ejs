<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partial/head') %>
    <title>HOmePage</title>
    <style>
      .grid-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  padding: 20px;
}

.cards {
  border: 1px solid #ccc;
  padding: 15px;
  border-radius: 10px;
  background-color: #f8f8f8;
  text-align: center;
}

.cards img {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: 5px;
}

    </style>
  </head>
 <body>
  <%- include('./partial/nav') %>
  <h1>Home 1</h1>

  <% if (locals.blogs) { %>
  <div class="grid-container">
    <% blogs.forEach(userBlogs => { %>
      <div class="cards">
        <strong><%= userBlogs.title %></strong>
        <div class="images">
          <img src="<%= userBlogs.coverImageUrl %>" alt="Blog Image" />
        </div>
        <br />
        <a class="btn btn-primary" href="/blogs/<%= userBlogs.id %>">View</a>
      </div>
    <% }) %>
  </div>
  <% } %>

  <%- include('./partial/script') %>
</body>

</html>
